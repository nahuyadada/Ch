<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- TextView to display the name of the tab (Breakfast, Lunch, or Dinner) -->
    <TextView
        android:id="@+id/tabNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tab Name"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <!-- TextView to display the data for the tab (Meal data like Pancakes, Salad, etc.) -->
    <TextView
        android:id="@+id/tabDataTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tab Data"
        android:textSize="16sp"/>

</LinearLayout>
