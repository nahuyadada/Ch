<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingTop="4dp"    android:paddingBottom="4dp"
    android:paddingStart="8dp"
    android:paddingEnd="8dp"
    android:gravity="center_vertical"> <TextView
    android:id="@+id/textViewFoodName"
    android:layout_width="0dp" android:layout_height="wrap_content"
    android:layout_weight="3" android:text="Food Item Name"
    android:textSize="14sp"
    android:gravity="start|center_vertical"/> <TextView
    android:id="@+id/textViewFoodCalories"
    android:layout_width="0dp" android:layout_height="wrap_content"
    android:layout_weight="1.5" android:text="100 kcal"
    android:gravity="end|center_vertical" android:textSize="14sp" />

    <TextView
        android:id="@+id/textViewFoodTime"
        android:layout_width="0dp" android:layout_height="wrap_content"
        android:layout_weight="1.5" android:text="12:00 PM"
        android:gravity="end|center_vertical" android:textSize="12sp"               android:textColor="@android:color/darker_gray" android:layout_marginStart="8dp"/> </LinearLayout>