<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#C2FFC7"
    android:padding="20dp"
    tools:context=".NotificationActivity">

    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/back"
        android:contentDescription="Back Button"
        android:layout_marginBottom="16dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/rounded_panel2"
        android:padding="16dp">

        <Switch
            android:id="@+id/switchMealReminder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:text="Enable Meal Reminders"
            tools:ignore="UseSwitchCompatOrMaterialXml" />

        <TextView
            android:id="@+id/notificationMeal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reminds you of your meals (Breakfast, Lunch, and Dinner.)"
            android:textSize="14sp"
            android:layout_marginTop="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="12dp"
            android:paddingStart="8dp"
            android:paddingEnd="8dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Breakfast Time:"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true"/>
                <TextView
                    android:id="@+id/tvBreakfastTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="08:00"
                    android:textStyle="bold"
                    android:layout_toStartOf="@id/btnEditBreakfastTime"
                    android:layout_marginEnd="16dp"
                    android:layout_centerVertical="true"/>
                <Button
                    android:id="@+id/btnEditBreakfastTime"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:text="Edit"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lunch Time:"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true"/>
                <TextView
                    android:id="@+id/tvLunchTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="13:00"
                    android:textStyle="bold"
                    android:layout_toStartOf="@id/btnEditLunchTime"
                    android:layout_marginEnd="16dp"
                    android:layout_centerVertical="true"/>
                <Button
                    android:id="@+id/btnEditLunchTime"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:text="Edit"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dinner Time:"
                    android:layout_centerVertical="true"
                    android:layout_alignParentStart="true"/>
                <TextView
                    android:id="@+id/tvDinnerTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="19:00"
                    android:textStyle="bold"
                    android:layout_toStartOf="@id/btnEditDinnerTime"
                    android:layout_marginEnd="16dp"
                    android:layout_centerVertical="true"/>
                <Button
                    android:id="@+id/btnEditDinnerTime"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:text="Edit"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/rounded_panel2"
        android:padding="16dp"
        android:layout_marginTop="16dp">
        <Switch
            android:id="@+id/switchWaterReminder" android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:text="Enable Water Reminders"
            tools:ignore="UseSwitchCompatOrMaterialXml"/>
        <TextView
            android:id="@+id/notificationWater"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reminds you periodically to drink water."
            android:textSize="14sp"
            android:layout_marginTop="8dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/rounded_panel2"
        android:padding="16dp"
        android:layout_marginTop="16dp">
        <Switch
            android:id="@+id/switchProgressReminder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:text="Weekly progress notifications"
            tools:ignore="UseSwitchCompatOrMaterialXml"/>
        <TextView
            android:id="@+id/notificationProgress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reminds you of the progress that you have weekly."
            android:textSize="14sp"
            android:layout_marginTop="8dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/rounded_panel2"
        android:padding="16dp"
        android:layout_marginTop="16dp">
        <Switch
            android:id="@+id/switchGoalReminder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:text="Goal achievement alerts"
            tools:ignore="UseSwitchCompatOrMaterialXml"/>
        <TextView
            android:id="@+id/notificationGoal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alerts you when you reached any of your goals."
            android:textSize="14sp"
            android:layout_marginTop="8dp"/>
    </LinearLayout>

</LinearLayout>